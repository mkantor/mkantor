{
  "compilerOptions": {
    "exactOptionalPropertyTypes": true,
    "lib": ["es2024"],
    "module": "node20",
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUncheckedSideEffectImports": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2024",
    "verbatimModuleSyntax": true
  }
}
